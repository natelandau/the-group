{# def
    selected_campaign: Campaign | None,
#}

<PageLayout title="Create Character">
    <global.PageTitle>Create New Character</global.PageTitle>
    <div id="create-character-container">
        <div class="row g-1">
            <div class="col-12 col-md-6 border rounded">
                <div class="px-2 py-3">
                    <h3 class="mb-3">Create from Sheet</h3>
                    <p>
                        This wizard will guide you through the process of <strong>entering a new character into the system by hand</strong>. It is recommended that you have already created your character on paper before starting this process. This will make it easier to enter the information into the system.
                    </p>

                    <character_create.SnippetCampaignSelect selected_campaign={{ selected_campaign }} />

                    {% if session["IS_STORYTELLER"] %}
                        <button class="btn btn-success btn-lg mb-2"
                                hx-get="{{- url_for('character_create.create_1', character_type='storyteller', campaign_id=selected_campaign.id) -}}"
                                hx-target="#create-character-container">
                            Create Storyteller Character&nbsp;&nbsp;<span class="fa-solid fa-circle-right fa-xl"></span>
                        </button>
                    {% endif %}
                    <button class="btn btn-success btn-lg mb-2"
                            hx-get="{{- url_for('character_create.create_1', character_type='player', campaign_id=selected_campaign.id) -}}"
                            hx-target="#create-character-container">
                        Create
                        {% if session["IS_STORYTELLER"] %}Player{% endif %}
                        Character&nbsp;&nbsp;<span class="fa-solid fa-circle-right fa-xl"></span>
                    </button>
                </div>
            </div>
            <div class="col-12 col-md-6 border rounded">
                <div class="px-2 py-3">
                    <h3 class="mb-3">Generate Random Character</h3>
                    <p>
                        For the cost of <code>10xp</code>, I will generate three characters for you to choose between.  You select the one you want to keep.
                    </p>
                    <p>
                        By rolling percentile dice we select a class and a concept.  The concept guides how default dots are added to your character. Once you select a character you can re-allocate dots and change the name, but you cannot change the concept, class, or clan. <strong>Characters created with the RNG system receive bonus abilities not available to characters created by hand.</strong>
                    </p>
                    <character_create.SnippetCampaignSelect selected_campaign={{ selected_campaign }} />

                    {% if session["IS_STORYTELLER"] %}
                        <a class="btn btn-success btn-lg mb-2"
                           href="{{ url_for('character_create.rng1', character_type='storyteller',campaign_id=selected_campaign.id) }}">
                            Create RNG Storyteller Character&nbsp;&nbsp;<span class="fa-solid fa-circle-right fa-xl"></span>
                        </a>
                    {% endif %}
                    <a class="btn btn-success btn-lg mb-2"
                       href="{{ url_for('character_create.rng1', character_type='player',campaign_id=selected_campaign.id) }}">
                        Create RNG
                        {% if session["IS_STORYTELLER"] %}Player{% endif %}
                        Character&nbsp;&nbsp;<span class="fa-solid fa-circle-right fa-xl"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</PageLayout>
