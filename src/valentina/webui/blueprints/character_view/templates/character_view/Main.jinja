{# def
    character:Character,
    traits:list[CharacterTrait]=[],
    character_owner: User,
#}
<PageLayout title={{ character.name }} _attrs={{ attrs }}>
    <global.PageTitle>{{ character.full_name }}</global.PageTitle>
    <div class="mb-4">
        <a href="{{ url_for('character_view.edit', character_id=character.id) }}"
           class="btn btn-primary">Edit Character</a>
        {% if character.freebie_points > 0 %}
            <a href="{{ url_for('character_edit.freebie', character_id=character.id) }}"
               class="btn btn-primary">Spend Freebie Points</a>
        {% endif %}
    </div>

    {% include "character_view/tabs.html" %}

    <div id="main-content" class="mt-3 mx-auto px-lg-5">
        {# Include the default jinjax template include here for initial page load #}
        <character_view.Sheet character={{ character }} traits={{ traits }} character_owner={{ character_owner }} />
    </div>
</PageLayout>
