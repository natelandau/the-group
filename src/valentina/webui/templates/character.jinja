<PageLayout title="{{ character.name_first }} {{ character.name_last }}">
{% if success_msg %}<div class="alert alert-success" role="alert">{{ success_msg }}</div>{% endif %}
{% set link = url_for('character.character_edit', character_id=character.id) %}
<div>
    <global.PageTitle right-button="true" button-url={{ link }} button-text="Edit character">{{ character.full_name }}</global.PageTitle>
</div>
{% include "character/tabs.html" %}
<div id="main-content" class="mt-3 mx-auto px-lg-5">
    {# Include the default jinjax template include here for initial page load #}
    <character.Sheet character={{ character }} traits={{ traits }} />
</div>
</PageLayout>
