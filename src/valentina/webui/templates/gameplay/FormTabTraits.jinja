{# def
    traits:List[CharacterTrait] = [],
    campaign:Campaign = None,
#}
<form hx-post="{{ url_for("gameplay.diceroll") }}"
      hx-target="#main-content"
      hx-trigger="submit"
      class="pb-3">
    <input type="hidden" id="dice_size" name="dice_size" value="10" />
    <input type="hidden" id="tab" name="tab" value="traits" />
    <div class="row">
        <div class="col">
            <label for="trait1" class="form-label">Trait 1</label>
            <div class="input-group mb-3">
                {# <label class="input-group-text">Trait 1</label> #}
                <select class="form-select" name="trait1">
                    <option value='{}' selected></option>
                    {% for trait in traits %}
                        <option value='{"id": "{{ trait.id }}", "value": {{ trait.value }}, "name": "{{ trait.name }}" }'>
                            {{ trait.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="col">
            <label for="trait2" class="form-label">Trait 2</label>
            <div class="input-group mb-3">
                {# <label class="input-group-text">Trait 2</label> #}
                <select class="form-select" name="trait2">
                    <option value='{}' selected></option>
                    {% for trait in traits %}
                        <option value='{"id": "{{ trait.id }}", "value": {{ trait.value }}, "name": "{{ trait.name }}" }'>
                            {{ trait.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <global.FormIncrement label="Difficulty" form-id="difficulty" start-val="6" />
        </div>
        <div class="col">
            <global.FormIncrement label="Desperation Dice" form-id="desperation_dice" start-val="0" max-val={{ campaign.desperation }} />
        </div>
    </div>
    <button class="btn btn-primary" value="submit">Roll Dice</button>
</form>
