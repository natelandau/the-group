{# def
    statistics:dict[str,str],
    with_title:bool=True,
    title:str="Statistics",
    header_size:str = "h2",
#}
{% if with_title %}

    {% set header_size = header_size if header_size in ["h2", "h3", "h4", "h5", "h6"] else "h2" %}

    <{{ header_size }}>{{ title }}</{{ header_size }}>
    <hr class="border border-primary border-2 opacity-75">
{% endif %}

<table class="table table-borderless table-sm">
    <tr>
        <td class="text-end pe-2 text-nowrap">
            <strong>Total Rolls</strong>
        </td>
        <td class="font-monospace text-nowrap">{{ statistics.total_rolls }}</td>
        <td class="text-end pe-2 text-nowrap">
            <strong>Avg. Criticals</strong>
        </td>
        <td class="font-monospace text-nowrap">
            {{ statistics.criticals }} <small>({{ statistics.criticals_percentage }}%)</small>
        </td>
    </tr>
    <tr>
        <td class="text-end pe-2 text-nowrap">
            <strong>Avg. Difficulty</strong>
        </td>
        <td class="font-monospace text-nowrap">{{ statistics.average_difficulty }}</td>
        <td class="text-end pe-2 text-nowrap">
            <strong>Avg. Successes</strong>
        </td>
        <td class="font-monospace text-nowrap">
            {{ statistics.successes }} <small>({{ statistics.successes_percentage }}%)</small>
        </td>
    </tr>
    <tr>
        <td class="text-end pe-2 text-nowrap">
            <strong>Avg. Pool Size</strong>
        </td>
        <td class="font-monospace text-nowrap">{{ statistics.average_pool }}</td>
        <td class="text-end pe-2 text-nowrap">
            <strong>Avg. Failures</strong>
        </td>
        <td class="font-monospace text-nowrap">
            {{ statistics.failures }} <small>({{ statistics.failures_percentage }}%)</small>
        </td>
    </tr>
    <tr>
        <td></td>
        <td></td>
        <td class="text-end pe-2 text-nowrap">
            <strong>Avg. Botches</strong>
        </td>
        <td class="font-monospace text-nowrap">
            {{ statistics.botches }} <small>({{ statistics.botches_percentage }}%)</small>
        </td>
    </tr>
</table>
